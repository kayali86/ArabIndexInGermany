<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_marginTop="56dp"
        android:layout_height="match_parent"
        tools:context="kayali.developer.android.arabindexingermany.CompanyDetailsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="fitXY"
                    android:id="@+id/dImageView"/>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:clickable="false"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.1"
                    style="?android:attr/ratingBarStyleSmall"
                    android:id="@+id/average_rate_bar"/>

            </RelativeLayout>

            <RatingBar
                android:id="@+id/new_rate_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate"
                android:onClick="rate"
                android:id="@+id/rating_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dCompanyNameV"
                android:text=""
                android:background="@drawable/edit_shape"
                android:padding="@dimen/dEditTxtPadding"
                android:layout_marginTop="@dimen/dMarginT" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dAddressV"
                android:text=""
                android:background="@drawable/edit_shape"
                android:padding="@dimen/dEditTxtPadding"
                android:layout_marginTop="@dimen/dMarginT" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dPaymentV"
                android:text=""
                android:background="@drawable/edit_shape"
                android:padding="@dimen/dEditTxtPadding"
                android:layout_marginTop="@dimen/dMarginT" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dServicesV"
                android:text=""
                android:background="@drawable/edit_shape"
                android:padding="@dimen/dEditTxtPadding"
                android:layout_marginTop="@dimen/dMarginT" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sParking"
                    android:background="@drawable/edit_shape"
                    android:padding="@dimen/dEditTxtPadding"
                    android:layout_marginTop="@dimen/dMarginT" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dParkingV"
                    android:text=""
                    android:padding="@dimen/dEditTxtPadding"
                    android:layout_marginTop="@dimen/dMarginT" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sAppointment"
                    android:background="@drawable/edit_shape"
                    android:padding="@dimen/dEditTxtPadding"
                    android:layout_marginTop="@dimen/dMarginT" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dAppointmentV"
                    android:text=""
                    android:padding="@dimen/dEditTxtPadding"
                    android:layout_marginTop="@dimen/dMarginT" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dOtherServicesV"
                android:text=""
                android:background="@drawable/edit_shape"
                android:padding="@dimen/dEditTxtPadding"
                android:layout_marginTop="@dimen/dMarginT" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dNotesV"
                android:text=""
                android:background="@drawable/edit_shape"
                android:padding="@dimen/dEditTxtPadding"
                android:layout_marginTop="@dimen/dMarginT" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dOpeningHoursV"
                android:text=""
                android:background="@drawable/edit_shape"
                android:padding="@dimen/dEditTxtPadding"
                android:layout_marginTop="@dimen/dMarginT" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dContactV"
                android:text=""
                android:background="@drawable/edit_shape"
                android:padding="@dimen/dEditTxtPadding"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="@dimen/dMarginT" />
        </LinearLayout>
    </ScrollView>

